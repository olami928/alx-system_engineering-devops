#!/usr/bin/env bash
# Bash script to display "Best School" 10 times, and on the 9th iteration, display "Hi" on a new line

count=0

# Use a while loop to iterate 10 times
while [ "$count" -lt 11 ]; do
    # Check if it's the 9th iteration
    if [ "$count" -eq 9 ]; then
        echo "Hi"  # Display "Hi" on the 9th iteration
    else
        echo "Best School"  # Display "Best School" for other iterations
    fi
    ((count++))
done
